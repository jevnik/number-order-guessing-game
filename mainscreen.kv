ScreenManager:

    id: ScreenManager
    MenuScreen:
    MainScreen:
    GameOverScreen:
    LevelCompletedScreen:

<Label>:
    font_name: "Micro-Six.ttf"
    font_size: 20

<Button>:
    background_normal: ""
    background_color: 0,0,0


<MenuScreen>:
    name: "MenuScreen"
    id: menuscreen
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            width: root.width
            text: 'Guessing game'
            font_size: 40
            color: 0.2, 0.2, 0.2, 1

        Button:
            text: 'START'
            font_size: 60
            background_color: 0.4, 0.4, 0.4, 0.5
            background_normal: ''
            on_press: root.start_game()

<GameOverScreen>:
    name: "GameOverScreen"
    id: gameoverscreen
    BoxLayout:
        padding: 50
        spacing: 20
        Label:
            text:"GAME OVER!"
        Button:
            background_normal: ""
            background_color: 0.4, 0.4, 0.4, 0.5
            text: "START OVER"
            on_press: root.game_restart()

<LevelCompletedScreen>:
    id: levelcompletedscreen
    name: "LevelCompletedScreen"
    Label:
        text: "Level Completed"

<MainScreen>:
    id: mainscreen
    name: "MainScreen"
    on_enter: self.reload()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y:0.1
            orientation: "horizontal"
            Label:
                text: "Guessing game"
                size_hint_x: 0.8
            Label: 
                text: root.level_string

        
        GameArea:
            BoxLayout:
                size_hint_x:0.4
                padding: 50
                spacing: 20
                ScrollView:
                    size: self.size
                    do_scroll_y: True
                    do_scroll_x: False
                    ScrollableButtons:
                        id: scrollable_buttons
                        size_hint_y: None
                        height: self.minimum_height

            BoxLayout:
                padding: 50
                spacing: 20
                orientation: "vertical"
                Label:
                    text: root.gen_quote_label
                    text_size: self.size
                    valign: "middle"



                Button:
                    background_normal: ""
                    background_color: 0.4, 0.4, 0.4, 0.5
                            
                    id: gen_butt
                    text: root.gen_num_label
                    text_size: self.size
                    halign: 'center'  
                    valign: 'middle'
                    size_hint_y: 0.5
                    on_press: root.rand_butt_press(self)
                
